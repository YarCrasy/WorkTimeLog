<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkTimeLog.SettingPage"
             Title="Setting">
    <VerticalStackLayout Margin="10" Spacing="10">
        <HorizontalStackLayout Spacing="10">
            <Label Text="Dark Mode" VerticalOptions="Center"/>
            <Switch x:Name="isDarkMode" IsToggled="False" Toggled="IsDarkModeToggled"/>
        </HorizontalStackLayout>
        <Label Text="Seleccionar idioma" />
        <Picker x:Name="languagePicker" SelectedIndexChanged="OnLanguageChanged">
            <Picker.Items>
                <x:String>Español</x:String>
                <x:String>Chino</x:String>
                <x:String>Inglés</x:String>
            </Picker.Items>
        </Picker>
    </VerticalStackLayout>
</ContentPage>