<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkTimeLog.MainPage"
             Title="">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Label
                Text="Work Log"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            
            <Grid>

                <Label 
                    x:Name="PlaceholderLabel"
                    Text="Select User"
                    TextColor="Gray"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    IsVisible="True" 
                    Margin="10,0,0,0"/>

                <Picker 
                    x:Name="UserPicker"
                    SelectedIndexChanged="UserPickerSelection">
                    <Picker.Items>
                    </Picker.Items>
                </Picker>
            </Grid>

            <Entry Placeholder="Password" IsPassword="True" x:Name="password" x:DataType="x:Byte"/>
            <Button Text="Login" Clicked="LoginButtonClicked" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
