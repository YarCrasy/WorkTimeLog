<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WorkTimeLog.UsersListPage"
             Title="Lista de Usuarios">
    <VerticalStackLayout Padding="10" Spacing="10" x:Name="UserList">
        <!-- Fila 1 -->
        <Border Padding="10" BackgroundColor="AliceBlue" StrokeShape="RoundRectangle 10" Margin="0,0,0,10" ClassId="">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Label
                    Text="Users1"
                    Margin="10"
                    FontAttributes="Bold"
                    FontSize="20"
                    VerticalOptions="Center"
                    HorizontalOptions="Start"
                    Grid.Column="0"/>
                <Button Clicked="DeleteUserButtonClicked" 
                    Margin="10" Padding="3" 
                    WidthRequest="15" HorizontalOptions="End"
                    Grid.Column="1">
                    <Button.ImageSource>
                        <FileImageSource File="delete_icon.png"/>
                    </Button.ImageSource>
                </Button>
            </Grid>
        </Border>

    </VerticalStackLayout>
</ContentPage>